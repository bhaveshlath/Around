<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include layout="@layout/app_bar_short"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium">
            <LinearLayout
                    android:id="@+id/post_subtype_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    style="@style/RowMarginSmall">
                <TextView
                        android:id="@+id/post_subtype_title"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/sport_name"
                        style="@style/HeaderText.Blue"/>
                <TextView
                        android:id="@+id/post_subtype_content"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/MediumText.Dark"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/post_date_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@id/post_subtype_row"
                    style="@style/RowMarginSmall">
                <TextView
                        android:id="@+id/post_date_title"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        style="@style/HeaderText.Blue"/>
                <TextView
                        android:id="@+id/post_date_content"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/MediumText.Dark"
                        max/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/post_time_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@id/post_date_row"
                    style="@style/RowMarginSmall">
                <TextView
                        android:id="@+id/post_time_title"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/time"
                        style="@style/HeaderText.Blue"/>
                <TextView
                        android:id="@+id/post_time_content"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/MediumText.Dark"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/post_location_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@id/post_time_row"
                    style="@style/RowMarginSmall">
                <TextView
                        android:id="@+id/post_location_title"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/location_title"
                        style="@style/HeaderText.Blue"/>
                <TextView
                        android:id="@+id/post_location_content"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/MediumText.Dark"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/post_age_range_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@id/post_location_row"
                    style="@style/RowMarginSmall">
                <TextView
                        android:id="@+id/post_age_range_title"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/age_range"
                        style="@style/HeaderText.Blue"/>
                <TextView
                        android:id="@+id/post_age_range_content"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/MediumText.Dark"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/post_gender_preference_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@id/post_age_range_row"
                    style="@style/RowMarginSmall">
                <TextView
                        android:id="@+id/post_gender_preference_title"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/gender_preference"
                        style="@style/HeaderText.Blue"/>
                <TextView
                        android:id="@+id/post_gender_preference_content"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/MediumText.Dark"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/post_description_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@id/post_gender_preference_row"
                    style="@style/RowMarginSmall">
                <TextView
                        android:id="@+id/post_description_title"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        style="@style/HeaderText.Blue"/>
                <TextView
                        android:id="@+id/post_description_content"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/MediumText.Dark"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/user_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_below="@id/post_description_row"
                    android:text="@string/new_post_user_agreement_disclaimer"
                    style="@style/RowMarginMedium"/>

            <Button
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_blue_rounded"
                    android:layout_alignParentBottom="true"
                    android:text="@string/submit"
                    style="@style/MediumText.White"/>

            <include layout="@layout/layout_progress"/>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>