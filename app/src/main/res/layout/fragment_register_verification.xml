<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:layout_margin="@dimen/margin_medium"
              tools:context="com.example.blath.around.fragments.RegisterVerificationFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
            android:layout_margin="@dimen/margin_large"
            android:id="@+id/verification_icon"
            android:layout_gravity="center_horizontal"
                android:layout_width="120dp"
               android:layout_height="120dp"
                android:src="@drawable/secret"/>
    <TextView
            android:layout_margin="@dimen/margin_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/verification_text"/>
    <Button
            android:id="@+id/verification_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:text="@string/got_it"/>

</LinearLayout>
