<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SmallerButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="TallHeaderTitleTextStyle">
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="TallHeaderTitleTextStyle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TallHeaderTitleTextStyle.Gray">
        <item name="android:textColor">@color/black_24</item>
    </style>

    <style name="TallHeaderSubtitleTextStyle" parent="SecondaryText.Light">
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="TallHeaderSubtitleTextStyle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TallHeaderSubtitleTextStyle.Gray">
        <item name="android:textColor">@color/black_24</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/around_background_start_color</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/around_background_end_color</item>
    </style>

</resources>
