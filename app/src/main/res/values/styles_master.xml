<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryText">
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier_primary</item>
    </style>

    <style name="PrimaryText.Light">
        <item name="android:textColor">@color/white_76</item>
        <item name="android:textColorLink">@color/white_76</item>
    </style>

    <style name="PrimaryText.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="PrimaryText.Dark">
        <item name="android:textColor">@color/black_80</item>
        <item name="android:textColorLink">@color/black_80</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier_primary</item>
    </style>

    <style name="SmallText.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="SmallText.Light">
        <item name="android:textColor">@color/white_56</item>
        <item name="android:textColorLink">@color/white_56</item>
    </style>

    <style name="SmallText.gray">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorLink">@color/gray</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textSize">@dimen/text_size_secondary</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier_secondary</item>
    </style>

    <style name="SecondaryText.Light">
        <item name="android:textColor">@color/white_76</item>
        <item name="android:textColorLink">@color/white_76</item>
    </style>

    <style name="SecondaryText.Gray">
        <item name="android:textColor">@color/black_32</item>
        <item name="android:textColorLink">@color/black_32</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier_primary</item>
    </style>

    <style name="MediumText.Light">
        <item name="android:textColor">@color/white_56</item>
        <item name="android:textColorLink">@color/white_56</item>
    </style>

    <style name="MediumText.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="MediumText.Dark">
        <item name="android:textColor">@color/black_80</item>
        <item name="android:textColorLink">@color/black_80</item>
    </style>

    <style name="MediumText.Blue">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier_primary</item>
    </style>

    <style name="HeaderText.Dark">
        <item name="android:textColor">@color/black_80</item>
        <item name="android:textColorLink">@color/black_80</item>
    </style>

    <style name="HeaderText.Blue">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="AppBarShortDark">
        <item name="android:background">@color/around_background_end_color</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>
    <style name="AppBarTextLight">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="AppBarShortLight" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/color_primary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="AppBarTextDark">
        <item name="android:textColor">@color/around_background_end_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="AppBarShortTransparent" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="RowMarginVerticalMedium">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <style name="RowMarginVerticalSmall">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="RowMarginHorizontalMedium">
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
    </style>

    <style name="RowMarginHorizontalSmall">
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>

    <style name="RowPaddingVerticalLarge">
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
    </style>

    <style name="RowPaddingVerticalMedium">
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>

    <style name="RowPaddingVerticalSmall">
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="RowPaddingHorizontalMedium">
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
    </style>

    <style name="RowPaddingHorizontalSmall">
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
    </style>

    <style name="TypeFragmentButton">
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@drawable/button_white_rounded</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="PostDataText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:layout_marginTop">@dimen/margin_xsmall</item>
    </style>
</resources>