<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryText">
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier_primary</item>
    </style>

    <style name="PrimaryText.Light">
        <item name="android:textColor">@color/white_76</item>
        <item name="android:textColorLink">@color/white_76</item>
    </style>

    <style name="PrimaryText.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="PrimaryText.Dark">
        <item name="android:textColor">@color/black_80</item>
        <item name="android:textColorLink">@color/black_80</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier_primary</item>
    </style>

    <style name="SmallText.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="SmallText.Light">
        <item name="android:textColor">@color/white_56</item>
        <item name="android:textColorLink">@color/white_56</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textSize">@dimen/text_size_secondary</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier_secondary</item>
    </style>

    <style name="SecondaryText.Light">
        <item name="android:textColor">@color/white_76</item>
        <item name="android:textColorLink">@color/white_76</item>
    </style>

    <style name="SecondaryText.Gray">
        <item name="android:textColor">@color/black_32</item>
        <item name="android:textColorLink">@color/black_32</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier_primary</item>
    </style>

    <style name="MediumText.Light">
        <item name="android:textColor">@color/white_56</item>
        <item name="android:textColorLink">@color/white_56</item>
    </style>

    <style name="MediumText.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="MediumText.Dark">
        <item name="android:textColor">@color/black_80</item>
        <item name="android:textColorLink">@color/black_80</item>
    </style>

    <style name="MediumText.Blue">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="AppBarShortDark" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/color_primary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <style name="AppBarTextLight">
        <item name="android:textColor">@color/black_80</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="AppBarTextDark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

</resources>